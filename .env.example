# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Default LLM provider to use (gemini, ollama, or openai)
DEFAULT_LLM_PROVIDER=gemini

# -----------------------------------------------------------------------------
# Gemini Configuration
# -----------------------------------------------------------------------------
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# -----------------------------------------------------------------------------
# Ollama Configuration (Local LLM)
# -----------------------------------------------------------------------------
# Enable/disable Ollama provider (default: enabled)
OLLAMA_ENABLED=true

# Ollama server URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Default Ollama model to use (default: llama3.2)
OLLAMA_MODEL=llama3.2

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
# OpenAI API key (optional, leave empty if not using)
OPENAI_API_KEY=

# OpenAI API base URL (optional, for Azure OpenAI or compatible APIs)
OPENAI_BASE_URL=

# Default OpenAI model to use (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# Security Configuration
# =============================================================================

# Allowed CORS origins (optional, defaults to http://localhost:8080)
# Comma-separated list for multiple origins
ALLOWED_ORIGINS=http://localhost:8080
